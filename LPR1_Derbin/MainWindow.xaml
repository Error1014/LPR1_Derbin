<Window x:Class="LPR1_Derbin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LPR1_Derbin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas>
            <TextBlock Width="330" Height="42" FontSize="25" Text="Набрано 4-х значное число" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="440"  Canvas.Top="16"/>
            <TextBox x:Name="dataTextBox" Width="150" FontSize="30" Canvas.Left="440" Canvas.Top="63" PreviewTextInput="dataTextBox_PreviewTextInput" />
            <Button Width="200" Height="50" FontSize="30" Content="Вычислить" Canvas.Left="30" Canvas.Top="51" Click="GetResult"/>
            <Button Width="200" Height="50" FontSize="30" Content="Выйти" Canvas.Left="30" Canvas.Top="360" Click="Exit" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock x:Name="OtvetTextBlock" Width="330" Height="231" FontSize="25" Background="Aquamarine" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="440"  Canvas.Top="150"/>
        </Canvas>
    </Grid>
</Window>
